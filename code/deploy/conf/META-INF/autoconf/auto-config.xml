<?xml version="1.0" encoding="GBK"?>
<config>
    <group name="soft home" description="环境设置">
        <property name="corner.unix.user" defaultValue="admin" description="Linux下运行的用户,为apache使用"/>
    </group>
    
    <group name="server env" description="路径的设置">
        <property name="corner.deployhome" defaultValue="/home/${corner_unix_user}/web-deploy" description="应用程序部署目录"/>
        <property name="corner.htdocs.home" defaultValue="${corner_deployhome}/htdocs" description="http htdocs 目录"/>
        <property name="corner.javahome" defaultValue="/usr/corner/java" description="运行JBOSS的JDK"/>
        <property name="corner.httpdhome" defaultValue="/usr/corner/httpd22" description="运行httpd的目录"/>
        <property name="corner.jettyhome" defaultValue="/usr/corner/jetty" description="JETTY的目录"/>
        <property name="corner.jettyserverhome" defaultValue="${corner_deployhome}/jetty_server" description="Jetty的目录"/>
     
    </group>
    
    <group name="htdocs dir" description="静态资源的设置">
        <property name="corner.htdocs.home" description="静态资源部署目录" defaultValue="${corner_deployhome}/htdocs" />        
    </group>  
    
    
    <script>
	   
        <generate template="httpd.conf.vm" destfile="conf/httpd.conf" charset="GBK"/>
                
        <generate template="jetty/bin/httpd.vm" destfile="bin/httpd" charset="GBK"/>
        <generate template="jetty/start.ini.vm" destfile="conf/jetty/start.ini" charset="GBK"/>
        <generate template="jetty/bin/env.sh.vm" destfile="bin/env.sh" charset="GBK"/>
        
        <generate template="mod_proxy.conf.vm" destfile="conf/mod_proxy.conf" charset="GBK"/>
    </script>
</config>
